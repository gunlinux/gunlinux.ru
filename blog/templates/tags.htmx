{% for tag in tags %}
    <div class="minipost">
        <a class="minipost__title" 
            hx-get="{{url_for('tags.view',alias=tag.alias)}}"
            hx-trigger="click"
            hx-target=".page__content"
            hx-push-url="true"
            class="tags__item" href="{{url_for('tags.view', alias=tag.alias)}}">{{tag.title}}</a>
    </div>
{% endfor %}

